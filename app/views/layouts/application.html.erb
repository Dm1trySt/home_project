<!DOCTYPE html>
<html>
  <head>
    <title>ProjectHome</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="container main">
      <div class="row">
        <%= link_to "home", home_path %>
        <ul class="navbar-nav pull-xs-right">
          <!-- Пользователь залогинился? -->
          <% if user_signed_in? %>
            <!-- Выводим ссылку на выход -->
            <%= link_to "Выход", destroy_user_session_path, data: { turbo_method: :delete} %>
          <% else %>
            <!-- Иначе выводим ссылки на вход и регистрацию -->
            <%= link_to "Вход", new_user_session_path, class: "nav-link" %>
            <!-- to_do -->
            <%= link_to "Регистрация", new_user_registration_path, class: "nav-link" %>
          <% end %>
        </ul>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  <div class="container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name,message| %>
        <div class="alert <%= bootstrap_class_for(name) %>">
          <button class="close" data-dismiss="alert">&times;</button>
          <% message %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  </body>
</html>
