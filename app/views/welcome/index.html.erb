<% currently_at 'Home' %>
<div class ="home_page">
  <div class="col-md-6">
    <h1>Последние новости:</h1>
    <%= link_to "Добавить новость", new_news_path, class: 'btn btn-primary btn-lg mb-3' %>
    <% if @news.present? %>
        <%= render partial: 'news/news', collection: @news, as: :news, locals: {news: @news} %>
    <%end %>
  </div>
</div>

