<div class="card shadow mb-3">
  <section class="card-header">
    <%= image_tag user_avatar(project.user, 40), class: 'rounded'%>
    <%= project.user.name_or_email %>
    <time  datetime="<%project.formatted_created_at %>">
      <%=project.formatted_created_at %>
    </time>
  </section>
  <div class="card-body">
    <h1><span class="project"><%= link_to "#{sanitize project.name}", project_path(project), class: 'px-2 text-black' %></span></h1>
  </div>
</div>
<hr/>