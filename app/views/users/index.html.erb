<% currently_at 'Пользователи' %>
<% provide :page_title, 'Пользователи' %>

<h1 class="mb-4">Пользователи</h1>
<div class="btn-group mb-3">
  <%= link_to 'Download zipped XLSX', users_path(format: :zip), class: 'btn btn-secondary' %>
</div>

<%= pagination @pagy %>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Email</th>
    <th scope="col">Created at</th>
    <th scope="col">Updated at</th>
    <th scope="col">Admin</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%=user.id %></td>
      <td><%=user.name %></td>
      <td><%=user.email %></td>
      <td><%=user.created_at.to_date %></td>
      <td><%=user.updated_at.to_date %></td>
      <td><%=user.admin %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= pagination @pagy %>
