<% currently_at 'Пользователи' %>
<% provide :page_title, 'Настройки' %>

<h1 class="mb-4">Пользователи</h1>
<div class="btn-group mb-3">
  <%= link_to 'Скачать в формате XLSX', users_path(format: :xlsx), class: 'btn btn-secondary' %>
</div>

<%= pagination @pagy %>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Имя</th>
    <th scope="col">Email</th>
    <th scope="col">Роль</th>
    <th scope="col">Пользователь админ?</th>
    <th scope="col">Создан</th>
    <th scope="col">Обнавлен</th>

    <th scope="col">Управление пользователем</th>
  </tr>
  </thead>
  <tbody>
  <% if @users.present? %>
    <%= render partial: 'users', collection: @users, as: :user, locals: {user: @users} %>
  <%end %>
  </tbody>
</table>


<%= pagination @pagy %>
