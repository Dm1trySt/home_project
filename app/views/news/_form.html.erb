<%= simple_form_for @news do |f| %>
  <div class="mb-3">
    <div class="col-sm-10">
      <%= f.input :title %>
    </div>
  </div>

  <div class="mb-3">
    <div class="col-sm-10">
      <%= f.input :description %>
    </div>
  </div>

  <%= f.button :submit, "Сохранить", class: 'btn btn-primary'%>
<% end %>

