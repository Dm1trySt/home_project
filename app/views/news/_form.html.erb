<%= simple_form_for @news do |f| %>
  <div class="mb-3">
    <div class="col-sm-10">
      <%= f.input :title, minlength: 5, class:'form-control ' %>
    </div>
  </div>

  <div class="mb-3">
    <div class="col-sm-10">
      <%= f.input :description,  require: true, minlength: 5, class:'form-control' %>
    </div>
  </div>

  <%= f.button :submit, "Сохранить", class: 'btn btn-primary'%>
<% end %>

